//Roll_No:- A-22
#include <stdio.h>
#include <stdlib.h>

// Structure for BST node
typedef struct node {
    int data;
    struct node *left, *right;
} *BST;

// Function to create a new node
BST getNode(int val) {
    BST newNode = (BST)malloc(sizeof(struct node));
    newNode->data = val;
    newNode->left = newNode->right = NULL;
    return newNode;
}

// Function to insert a node in BST
BST insert(BST root, int val) {
    if (root == NULL)
        return getNode(val);
    
    if (val < root->data)
        root->left = insert(root->left, val);
    else if (val > root->data)
        root->right = insert(root->right, val);
    
    return root;
}

// Inorder traversal (for checking)
void inorder(BST root) {
    if (root != NULL) {
        inorder(root->left);
        printf("%d ", root->data);
        inorder(root->right);
    }
}

// Function to print all nodes within a given range [low, high]
void printRange(BST root, int low, int high) {
    if (root == NULL)
        return;

    // If current node is greater than low, check left subtree
    if (root->data > low)
        printRange(root->left, low, high);

    // If current node is within range, print it
    if (root->data >= low && root->data <= high)
        printf("%d ", root->data);

    // If current node is smaller than high, check right subtree
    if (root->data < high)
        printRange(root->right, low, high);
}

int main() {
    BST root = NULL;
    int n, val, low, high;

    printf("Enter number of nodes to insert in BST: ");
    scanf("%d", &n);

    printf("Enter %d values: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &val);
        root = insert(root, val);
    }

    printf("\nInorder Traversal (sorted): ");
    inorder(root);

    printf("\n\nEnter the range (low high): ");
    scanf("%d %d", &low, &high);

    printf("Nodes in range [%d, %d]: ", low, high);
    printRange(root, low, high);

    return 0;
}
