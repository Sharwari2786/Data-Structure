//Roll_No:- A-22
#include <stdio.h>
#include <stdlib.h>

typedef struct node {
    int data;
    struct node *left, *right;
} *BST;

BST getNode(int val) {
    BST newNode = (BST)malloc(sizeof(struct node));
    newNode->data = val;
    newNode->left = newNode->right = NULL;
    return newNode;
}

BST insert(BST root, int val) {
    if (root == NULL)
        return getNode(val);
    
    if (val < root->data)
        root->left = insert(root->left, val);
    else if (val > root->data)
        root->right = insert(root->right, val);
    
    return root;
}

int findMin(BST root) {
    if (root == NULL) {
        printf("Tree is empty.\n");
        return -1;
    }
    while (root->left != NULL)
        root = root->left;
    return root->data;
}

int findMax(BST root) {
    if (root == NULL) {
        printf("Tree is empty.\n");
        return -1;
    }
    while (root->right != NULL)
        root = root->right;
    return root->data;
}

void inorder(BST root) {
    if (root != NULL) {
        inorder(root->left);
        printf("%d ", root->data);
        inorder(root->right);
    }
}

int main() {
    BST root = NULL;
    int n, val;

    printf("Enter number of nodes to insert in BST: ");
    scanf("%d", &n);

    printf("Enter %d values: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &val);
        root = insert(root, val);
    }

    printf("\nInorder Traversal (sorted): ");
    inorder(root);

    int minVal = findMin(root);
    int maxVal = findMax(root);

    printf("\n\nMinimum element in BST: %d", minVal);
    printf("\nMaximum element in BST: %d\n", maxVal);

    return 0;
}
