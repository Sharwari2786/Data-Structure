#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>

bool isValid(char* s) {
    int n = strlen(s);
    char *stack = (char*)malloc(n * sizeof(char));
    int top = -1;

    for (int i = 0; i < n; i++) {
        char c = s[i];

        if (c == '(' || c == '[' || c == '{') {
            stack[++top] = c;
        } else {
            if (top == -1) {
                free(stack);
                return false;
            }
            char c1 = stack[top--];
            if ((c == ')' && c1 != '(') ||
                (c == ']' && c1 != '[') ||
                (c == '}' && c1 != '{')) {
                free(stack);
                return false;
            }
        }
    }

    bool res = (top == -1);
    free(stack);
    return res;
}

int main() {
    char s[100];
    printf("Enter parentheses expression: ");
    scanf("%s", s);

    if (isValid(s))
        printf("Parentheses are balanced.\n");
    else
        printf("Parentheses are NOT balanced.\n");

    return 0;
}
